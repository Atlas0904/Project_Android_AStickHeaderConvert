<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.atlas_huang.astickyheader"
    android:versionCode="3"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        <activity
            android:name="com.example.atlas_huang.astickheaderconvert.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.atlas_huang.astickheaderconvert.AboutActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="About"
            android:parentActivityName="com.example.atlas_huang.astickheaderconvert.MainActivity"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.atlas_huang.astickheaderconvert.MainActivity" />
        </activity>
        <activity
            android:name="com.example.atlas_huang.astickheaderconvert.ListActivity"
            android:label="@string/title_activity_list" >
        </activity>
        <activity
            android:name="com.example.atlas_huang.astickheaderconvert.GridActivity"
            android:label="@string/title_activity_grid" >
        </activity>

    </application>

</manifest>